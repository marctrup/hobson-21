<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Cache static assets for 1 year -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="31536000.00:00:00" />
    </staticContent>
    
    <!-- Custom headers for better caching -->
    <httpProtocol>
      <customHeaders>
        <add name="Cache-Control" value="public, max-age=31536000, immutable" />
        <add name="Expires" value="Thu, 31 Dec 2037 23:55:55 GMT" />
      </customHeaders>
    </httpProtocol>
    
    <!-- URL Rewrite rules for SPA -->
    <rewrite>
      <rules>
        <!-- Cache busting for static assets -->
        <rule name="Cache Static Assets" stopProcessing="false">
          <match url="^(lovable-uploads|blog-images|assets)/.*\.(png|jpg|jpeg|gif|webp|svg|ico|css|js|woff|woff2|ttf|otf)$" />
          <action type="None" />
          <serverVariables>
            <set name="RESPONSE_Cache_Control" value="public, max-age=31536000, immutable" />
            <set name="RESPONSE_Expires" value="Thu, 31 Dec 2037 23:55:55 GMT" />
          </serverVariables>
        </rule>
        
        <!-- SPA fallback -->
        <rule name="React Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/(api)" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>